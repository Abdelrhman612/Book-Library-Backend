generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  role      String     @default("user")
  books     Book[]
  reviews   Review[]
  favorites Favorite[]
}

model Book {
  id          Int        @id @default(autoincrement())
  title       String
  author      String
  category    String
  description String
  link        String
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  reviews     Review[]
  favorites   Favorite[]
}

model Review {
  id      Int    @id @default(autoincrement())
  content String
  rating  Int
  userId  String
  bookId  Int
  user    User   @relation(fields: [userId], references: [id])
  book    Book   @relation(fields: [bookId], references: [id])
}

model Favorite {
  id     Int    @id @default(autoincrement())
  userId String
  bookId Int
  user   User   @relation(fields: [userId], references: [id])
  book   Book   @relation(fields: [bookId], references: [id])
}
